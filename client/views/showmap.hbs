<body>
    <!-- App -->
    <div class="app">
        <div class="main flex-d flex-c">
            <div class="main-top flex-c">
                <h3>Chưa biết ghi title gì</h3>
            </div>
            <div class="main-bottom flex-c">
                <div id="map"></div>
            </div>
    </div>
    <!-- End App -->

    <!-- Ion Icons Js -->
    <script type="module" src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.esm.js"></script>
    <script nomodule src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"></script>
    <script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDyhFZp_7CrnYAbTN1yxDzt4kxLmZMmY8o&callback=initMap"></script>
    <script>
        function initMap() {
            var locations = [
                new google.maps.LatLng(10.8541847, 106.6255021),
                new google.maps.LatLng(10.854224, 106.626399),
                new google.maps.LatLng(10.853828, 106.626597),
                new google.maps.LatLng(10.852984, 106.626930),
                new google.maps.LatLng(10.852555, 106.626745),
                new google.maps.LatLng(10.851804, 106.626867),
                new google.maps.LatLng(10.851246, 106.627442),
                new google.maps.LatLng(10.847689, 106.634993),
                new google.maps.LatLng(10.847202, 106.634783),
                new google.maps.LatLng(10.846658, 106.6342423)
            ];

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 10,
                center: new google.maps.LatLng(10.840970, 106.630860),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            });

            var infowindow = new google.maps.InfoWindow();

            var marker, i;
                for (i = 0; i < locations.length; i++) {
                    let m = locations[i];
                    (function(n){
                        setTimeout(function(){
                            new google.maps.Marker({
                                position: n,
                                map: map,
                                draggable: false,
                                animation: google.maps.Animation.DROP
                            })
                        }, i * 5000)
                    }(m))
                }
        }
    </script>
</body>

</html>